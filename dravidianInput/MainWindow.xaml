<Window x:Class="dravidianInput.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:dravidianInput"
        mc:Ignorable="d"
        Title="MainWindow" Height="480" Width="750">
    <Grid ScrollViewer.VerticalScrollBarVisibility="Disabled">
        <ScrollViewer VerticalScrollBarVisibility="Disabled">
            <TextBox Text="a" Name="output" FontFamily="NTR" Height="120" Margin="0,20,0,0" Width="400" FontSize="16" TextWrapping="Wrap" 
                     ScrollViewer.HorizontalScrollBarVisibility="Disabled" ScrollViewer.VerticalScrollBarVisibility="Visible" 
                     KeyDown="textbox1_KeyDown" VerticalAlignment="Top" HorizontalAlignment="Center"/>
        </ScrollViewer>

        <Grid Width="640" Height="270" VerticalAlignment="Bottom" HorizontalAlignment="Center">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <Button/>
            <Button Grid.Column="1"/>
            <Button Grid.Column="2"/>
            <Button Grid.Column="3"/>
            <Button Grid.Column="4"/>
            <Button Grid.Column="5"/>
            <Button Grid.Column="6"/>

        </Grid>
        <Button x:Name="Na" Width="61" Height="51" Click="aa" Margin="500,0,0,200" Panel.ZIndex="2" Background="Red" BorderBrush="{x:Null}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Button x:Name="Nka" Width="61" Height="51" Click="ka" Margin="500,0,0,90" Panel.ZIndex="2" Background="Red" BorderBrush="{x:Null}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Button x:Name="NSSe" Width="61" Height="51" Click="SSe" Margin="500,50,0,0" Panel.ZIndex="2" Background="Red" BorderBrush="{x:Null}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
    </Grid>
</Window>
